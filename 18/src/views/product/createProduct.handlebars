<h1>{{title}}</h1>
<form action="/product/create" method="POST">
    <label for="name">Nombre</label>
    <input type="text" id="name" name="name">
    <br>
    <label for="price">Precio</label>
    <input type="text" id="price" name="price">
    <br>
    <label for="profitRate">Rango de ganancia</label>
    <input type="text" id="profitRate" name="profitRate">
    <br>
    <label for="description">Descripcion</label>
    <textarea id="description" name="description"></textarea>
    <br>
    {{!-- hacer llamado al endpoint de status para traer los estados posibles --}}
    <label for="status">Estado</label>
    <select name="status" id="status">
        <option value="AVAILABLE">Disponible</option>
        <option value="NOT AVAILABLE">No disponible</option>
        <option value="DISCONTINUED">Descontinuado</option>
    </select>
    <br>

    <label for="category">Categoria</label>
    <select name="category" id="category">
        {{#each categories}} 
        <option value="{{_id}}">{{name}}</option>
         {{/each}}
    </select>

    <br>
    <label for="highlighted">Destacado</label>
    <select name="highlighted" id="highlighted">
        <option value="" disabled selected > Seleccionar </option>
        <option value="true"> Destacado </option>
        <option value="false"> No Destacado </option>
    </select>
    <br>
    <button type="submit">Enviar</button>
</form>