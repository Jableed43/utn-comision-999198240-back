<div
  style="display: flex;
    flex-wrap: wrap;
    gap: 15px;"
>
  {{#each products}}
    <div
      style="border: solid black;
    text-align: center;
    padding: 20px;
    max-width: 22%;
    box-sizing: border-box;"
    >
      <p>{{name}} </p>
      <p>{{price}} </p>
      <p>{{description}} </p>
      <p>{{status}} </p>
      <p>{{category.name}} </p>
      <p>{{stock}} </p>
      {{#if highlighted}}
        <p> Producto destacado </p>
      {{else}}
        <p> Producto no destacado </p>
      {{/if}}
    </div>
  {{/each}}
</div>