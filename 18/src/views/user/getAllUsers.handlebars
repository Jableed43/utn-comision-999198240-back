<h2>Lista de Usuarios</h2>
<a href="/user/create" class="btn btn-success">Crear Usuario</a>

{{#if users.length}}
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Edad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{name}}</td>
                <td>{{lastName}}</td>
                <td>{{email}}</td>
                <td>{{age}}</td>
                <td>
                    <a href="/user/update/{{_id}}" class="btn">Editar</a>
                    <form action="/user/delete/{{_id}}?_method=delete" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('¿Estás seguro de que quieres eliminar a {{name}} {{lastName}}?')">
                            Eliminar
                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No hay usuarios registrados.</p>
{{/if}}