<div class="card">
    <div class="card-header">
        <i class="fas fa-user-plus"></i> Registrar Nuevo Usuario
    </div>
    
    <form action="/user/create" method="POST" style="max-width: 600px; margin: 0 auto;">
        <div class="form-group">
            <label for="name">
                <i class="fas fa-user"></i> Nombre:
            </label>
            <input type="text" id="name" name="name" required 
                   placeholder="Ingresa el nombre del usuario"
                   style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 10px; font-size: 1rem;">
        </div>
        
        <div class="form-group">
            <label for="lastName">
                <i class="fas fa-user"></i> Apellido:
            </label>
            <input type="text" id="lastName" name="lastName" required 
                   placeholder="Ingresa el apellido del usuario"
                   style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 10px; font-size: 1rem;">
        </div>
        
        <div class="form-group">
            <label for="email">
                <i class="fas fa-envelope"></i> Email:
            </label>
            <input type="email" id="email" name="email" required 
                   placeholder="usuario@ejemplo.com"
                   style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 10px; font-size: 1rem;">
        </div>
        
        <div class="form-group">
            <label for="age">
                <i class="fas fa-birthday-cake"></i> Edad:
            </label>
            <input type="number" id="age" name="age" min="16" max="110" required 
                   placeholder="Ingresa la edad"
                   style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 10px; font-size: 1rem;">
        </div>
        
        <div class="form-group">
            <label for="password">
                <i class="fas fa-lock"></i> Contraseña:
            </label>
            <input type="password" id="password" name="password" required 
                   placeholder="Ingresa una contraseña segura"
                   style="padding: 0.75rem 1rem; border: 2px solid #e9ecef; border-radius: 10px; font-size: 1rem;">
            <small style="color: #6c757d; font-size: 0.9rem; margin-top: 0.5rem; display: block;">
                <i class="fas fa-info-circle"></i> Mínimo 6 caracteres, al menos 1 número, 1 mayúscula y 1 minúscula
            </small>
        </div>
        
        <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
            <button type="submit" class="btn btn-success" style="padding: 0.75rem 2rem; font-size: 1.1rem;">
                <i class="fas fa-user-plus"></i> Registrar Usuario
            </button>
            <a href="/user/getAll" class="btn btn-secondary" style="padding: 0.75rem 2rem; font-size: 1.1rem;">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>
